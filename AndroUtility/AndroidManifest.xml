            <intent-filter>
                <action android:name="com.example.androutility.UnitConverter" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androutility.todo_mainActivity"
            android:label="TO DO List" >
            <intent-filter>
                <action android:name="com.example.androutility.todo_mainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.androutility.scientific_calculator" />
        <activity android:name="com.example.androutility.normal_calculator" />
        <activity android:name="com.example.androutility.NoteEditor" />
        <activity
            android:name="com.example.androutility.LengthActivity"
